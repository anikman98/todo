<%- include("./partials/header") %>

<div class="container">
  <form action="/add/todo" method="POST">
    <input
      type="test"
      name="todo"
      class="form-control"
      placeholder="Enter a task..."
    />
    <button type="submit">Add task</button>
  </form>
</div>

<div class="list">
  <ul>
    <% todo.forEach(todo => { %>
    <li>
      <%= todo.todo %> | <a href="/delete/todo/<%= todo._id %>">delete</a>
    </li>
    <% }) %>
  </ul>
</div>

<%- include("./partials/footer") %>
